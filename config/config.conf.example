# TM-Monitor Configuration File
# Copy this file to ~/.config/tm-monitor/config.conf and modify as needed

# Update interval in seconds (1-300)
INTERVAL=2

# Size units: 1000 for GB (SI), 1024 for GiB (IEC)
UNITS=1000

# Enable colored output (true/false)
SHOW_COLORS=true

# Show session summary on exit (true/false)
SHOW_SUMMARY=true

# Enable debug logging (true/false)
DEBUG=false

# Enable CSV logging for data analysis (true/false)
CSV_LOG=false

# Maximum consecutive tmutil failures before giving up (1-10)
MAX_FAILURES=3

# ============================================================
# AUTO-UPDATE SETTINGS
# ============================================================

# Enable automatic update checks (true/false)
UPDATE_CHECK_ENABLED=true

# Update check interval in seconds
# 3600 = hourly, 86400 = daily, 604800 = weekly, 2592000 = monthly
UPDATE_CHECK_INTERVAL=86400

# Update channel (stable/beta/edge)
UPDATE_CHECK_CHANNEL=stable

# Notification style (banner/inline/silent)
# banner = Full banner at top of screen
# inline = Simple text notification
# silent = Log only, no visual notification
UPDATE_NOTIFICATION_STYLE=banner

# Automatically install updates (true/false)
# WARNING: Set to false for safety - always review updates first
UPDATE_AUTO_INSTALL=false

# GitHub repository for updates (owner/repo)
GITHUB_REPO=twickstrom/TimeMachineMonitor
